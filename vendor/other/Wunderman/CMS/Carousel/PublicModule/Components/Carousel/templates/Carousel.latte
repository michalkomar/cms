{*
 * @var $carousel
 *}
{block content}
<div class="container carousel-container">
	<a n:if="!is_null($carousel->name) && $carousel->name !== ''" name="{? echo \Nette\Utils\Strings::webalize($carousel->name)}" class="anchor"></a>
	<div class="row" n:if="$carousel->showHeader">
		<div class="col-lg-12">
			<h3>{$carousel->name}</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div id="carousel-{$id}" class="carousel slide" data-ride="carousel">
				<!-- Wrapper for slides -->
				<div class="carousel-inner" role="listbox">
					<div n:foreach="$carousel->getItems() as $item" n:class="$iterator->isFirst() ? 'active', 'item'">
						<div class="carousel-caption">
							<img n:if="$item->attachment !== null" src="{$basePath}/attachments/{$item->attachment->md5}">
							<div class="text-inner" n:ifset="$item->text">
								{$item->text|noescape}
								<div class="second-text">
									{$item->text2|noescape}
								</div>
								<div class="clearfix"></div>
								<a n:if="$item->link" href="{$item->link}" class="btn btn-transparent btn-black btn-bordered clearfix">{if $item->linkText}{$item->linkText}{/if}</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Controls -->
				<a n:if="$carousel->showNavigation && count($carousel->getItems()) > 1" class="left carousel-control" href="#carousel-{$id}" role="button" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a n:if="$carousel->showNavigation && count($carousel->getItems()) > 1" class="right carousel-control" href="#carousel-{$id}" role="button" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
</div>